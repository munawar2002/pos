<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mjtech.pos.controller.MainController">
   <children>
      <MenuBar fx:id="menuBar" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" onAction="#closeApplication" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Order">
            <items>
              <MenuItem fx:id="orderMenuItem" mnemonicParsing="false" onAction="#newOrderForm" text="Order Entry" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Inventory">
            <items>
              <MenuItem fx:id="productMenuItem" mnemonicParsing="false" onAction="#productForm" text="Product" />
                  <MenuItem fx:id="productMenuItem1" mnemonicParsing="false" onAction="#productCategoryForm" text="Product Category" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
